#!/bin/bash

output=$(cat)

regex="bash: (.*\.py): command not found"
if [[ "$output" =~ $regex ]]; then

    # If file exists
    if [[ -f "${BASH_REMATCH[1]}" ]]; then
        echo "Did you mean to run \`python ${BASH_REMATCH[1]}\`?"
        exit
    fi
fi

regex="bash: (./.*\.py): Permission denied"
if [[ "$output" =~ $regex ]]; then

    # If file exists
    if [[ -f "${BASH_REMATCH[1]}" ]]; then
        echo "Did you mean to run \`python ${BASH_REMATCH[1]}\`?"
        exit
    fi
fi
